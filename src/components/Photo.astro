---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
}

const { src, alt, width = 800, height = 400 } = Astro.props;
---

<figure class="my-8">
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    class="rounded-lg shadow-lg w-full object-cover"
  />
  {alt && <figcaption class="mt-2 text-sm text-gray-500 dark:text-gray-400 text-center">{alt}</figcaption>}
</figure> 