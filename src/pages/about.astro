---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About Me | Sandon Jurowski">
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          About Me
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Get to know more about my journey, skills, and what drives me.
        </p>
      </div>

      <!-- Bio Section -->
      <div class="prose dark:prose-invert max-w-none mb-16">
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
          Hi there! I'm Sandon Jurowski, a passionate father, developer and designer based in Seattle, WA. 
          I love creating digital experiences that are both beautiful and functional.
        </p>
      </div>

      <!-- Skills Section -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
          Skills & Expertise
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Frontend Development -->
          <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
              Frontend Development
            </h3>
            <ul class="space-y-2 text-gray-600 dark:text-gray-300">
              <li>Typescript</li>
              <li>JavaScript (ES6+)</li>
              <li>React.js</li>
              <li>Next.js</li>
              <li>HTML5 & CSS3</li>
            </ul>
          </div>

          <!-- Backend Development -->
          <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
              Backend Development
            </h3>
            <ul class="space-y-2 text-gray-600 dark:text-gray-300">
              <li>Node.js</li>
              <li>Express.js</li>
              <li>Python</li>
              <li>SQL & NoSQL Databases</li>
              <li>RESTful APIs</li>
            </ul>
          </div>
        </div>
      </div>


    </div>
  </section>
</Layout> 